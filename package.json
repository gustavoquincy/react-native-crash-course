{
  "name": "wixMobileCrashCourse",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start-e2e": "RN_SRC_EXT=e2e.js react-native start",
    "test": "jest && detox test",
    "e2e": "detox test",
    "watch": "jest --watch",
    "fake-server": "json-server --watch db.json",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "react": "16.6.0-alpha.8af6728",
    "react-native": "~0.56.0",
    "react-native-navigation": "^2.0.2588",
    "react-native-ui-lib": "^3.5.0",
    "remx": "^2.0.51"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-react-native": "4.0.0",
    "detox": "^9.1.2",
    "eslint": "^4.0.0",
    "eslint-config-wix": "^1.1.4",
    "eslint-plugin-react-native": "^3.0.0",
    "jest": "^23.6.0",
    "metro-react-native-babel-preset": "0.48.1",
    "mocha": "^5.2.0",
    "react-test-renderer": "16.5.0",
    "regenerator-runtime": "^0.13.1"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react-native"
        ],
        "retainLines": true
      }
    },
    "plugins": [
      ["transform-runtime", {
        "polyfill": false,
        "regenerator": true
      }]
    ]
  },
  "detox": {
    "test-runner": "mocha",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/wixMobileCrashCourse.app",
        "build": "xcodebuild -project ios/wixMobileCrashCourse.xcodeproj -scheme wixMobileCrashCourse -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    }
  }
}
